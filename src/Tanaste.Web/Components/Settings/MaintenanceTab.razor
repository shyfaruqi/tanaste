@namespace Tanaste.Web.Components.Settings

@* Maintenance — placeholder for future database diagnostics and maintenance tasks. *@

<MudPaper Elevation="0" Style="@GlassStyle">
    <MudStack AlignItems="AlignItems.Center" Spacing="4" Class="pa-8">
        <MudIcon Icon="@Icons.Material.Filled.Build"
                 Size="Size.Large"
                 Color="Color.Secondary"
                 Style="font-size: 4rem; opacity: 0.4;" />
        <MudText Typo="Typo.h6" Color="Color.Secondary">Maintenance</MudText>
        <MudText Typo="Typo.body2" Color="Color.Secondary" Align="Align.Center">
            Feature in Development — Database maintenance and diagnostics will appear here in a future update.
        </MudText>
    </MudStack>
</MudPaper>

@code {
    private const string GlassStyle =
        "background: var(--tanaste-glass-bg); " +
        "border: 1px solid var(--tanaste-glass-border); " +
        "backdrop-filter: blur(10px); " +
        "-webkit-backdrop-filter: blur(10px); " +
        "border-radius: 32px; " +
        "padding: 32px;";
}
